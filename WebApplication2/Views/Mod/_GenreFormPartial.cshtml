
@model WebApplication2.Models.Genre


<div class="row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (Model != null)
    {
        @Html.HiddenFor(model => model.GenreId)
    }
    <div class="row text-center h3">
        <div class="col">
            @Html.LabelFor(model => model.GenreName, new { @style = "float:right" })
        </div>
        <div class="col row">
            <div class="col-auto">
                @if (Model != null)
                {
                    @Html.HiddenFor(model => model.GenreName)
                    @Html.DisplayFor(model => model.GenreName, new { htmlAttributes = new { @style = "font-size:2rem" } })
                }
                else
                {
                    @Html.EditorFor(model => model.GenreName, new { htmlAttributes = new { @style = "font-size:2rem" } })
                    @Html.ValidationMessageFor(model => model.GenreName, "", new { @class = "text-danger" })
                }
            </div>
        </div>
    </div>
    <div class="row text-center h3">
        <div class="col">
            @Html.LabelFor(model => model.GenreCode, new { @style = "float:right" })
        </div>
        <div class="col row">
            <div class="col-auto">
                @if (Model != null)
                {
                    @Html.HiddenFor(model => model.GenreCode)
                    @Html.DisplayFor(model => model.GenreCode, new { htmlAttributes = new { @class = "form-control", @style = "font-size:2rem" } })
                }
                else
                {
                    @Html.EditorFor(model => model.GenreCode, new { htmlAttributes = new { @class = "form-control", @style = "font-size:2rem" } })
                    @Html.ValidationMessageFor(model => model.GenreCode, "", new { @class = "text-danger" })
                }
            </div>
        </div>

    </div>
    <div class="row text-center h3">
        <div class="col">
            @Html.LabelFor(model => model.isHiddenBool, htmlAttributes: new { @style = "float:right" })
        </div>
        <div class="col row">
            <div class="col-auto">
                @Html.CheckBoxFor(model => model.isHiddenBool)
            </div>
            <div class="col-auto">
                <h3>Ẩn</h3>
            </div>
        </div>
    </div>
</div>