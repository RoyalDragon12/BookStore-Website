@model WebApplication2.Models.Author

<h1 class="display-5 text-center">Tạo Tác Giả Mới</h1>
@using (Html.BeginForm("CreateAuthor", "Mod", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    { Html.RenderPartial("_AuthorFormPartial"); }

    <div class="text-center">
        <input type="submit" value="Tạo" class="btn btn-success btn-lg btn-block mt-5" />
    </div>
    <div class="text-center">
        <a href="@Url.Action("AuthorManager","Mod")" class="btn btn-danger btn-lg mt-5" style="width:15%">Hủy Bỏ</a>
    </div>
}