@using WebApplication2.Models;
@model IEnumerable<Book>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}
<html>
<head>
</head>
<body>
    <section>

        
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    @{Html.RenderPartial("_LeftSideBarPartial");}
                </div>
                <div class="col-sm-9 padding-right">
                    <div>
                        @Html.Action("_BookCategoryPartial", "Shop")
                    </div>
                    <div class="features_items">
                        @foreach (var item in Model)
                        {

                            @Html.Action("_BookPartial", "Shop", new { id = item.BookId })
                        }
                    </div>

                </div>
            </div>

        </div>


    </section>
</body>
</html>