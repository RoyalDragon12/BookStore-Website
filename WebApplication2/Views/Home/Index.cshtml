@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}
<html>
<body>

    <section id="slider">
        <!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <center><a href="#"><img src="~/Content/HinhAnhHome/banner1.jpg" class="d-block w-75" alt=""></a></center>
                            </div>
                            <div class="carousel-item">
                                <center><a href="#"><img src="~/Content/HinhAnhHome/banner2.jpg" class="d-block w-75" alt=""></a></center>
                            </div>
                            <div class="carousel-item">
                                <center><a href="#"><img src="~/Content/HinhAnhHome/banner3.jpg" class="d-block w-75" alt=""></a></center>
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </section><!--/slider-->

    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    @{Html.RenderPartial("_LeftSideBarPartial");}
                </div>

                <div class="col-sm-9 padding-right">
                    <div class="features_items">
                        <h2 class="title text-center">Các Sản Phẩm</h2>
                        @for (int i = 1; i < 7; i++)
                        {
                            @Html.Action("_BookPartial", "Shop", new { id = i })
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>